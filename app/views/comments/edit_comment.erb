<h2>Edit Your Comments Here!</h2>

<form method="post" action="/comments/<%=@comment.id %>/update">
	<input name="_method" type="hidden" value="put" />

	<textarea class="form-control" rows="5"  name="comment[comment_detail"><%=@comment.comment_detail %></textarea>
	

	<button type="submit" class="btn btn-default">change</button>

</form>

<% if @comment &&  @comment.errors.full_messages.each do |error|%>
<%= error %>
	<% end %>
<% end %>