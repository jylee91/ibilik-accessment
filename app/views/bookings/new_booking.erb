<h2>Enter your booking date</h2>

<form method="post" action ="/properties/<%=@property.id %>/bookings" >

	<input type="date" class="form-control"placeholder="booking date" name="booking[booking_date]">
	<textarea class="form-control" rows="5" placeholder="booking detail(optional)" name="booking[booking_detail]"></textarea>


	<button type="submit" class="btn btn-default">submit</button>

</form>

<% if @booking &&  @booking.errors.full_messages.each do |error|%>
<br><%= error %>
	<% end %>
<% end %>