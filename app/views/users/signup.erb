<h2>Signup Here</h2>

<form method="post" action ="/signup" >

	<input type="text" class="form-control"placeholder="name" name="user[name]">

	<input type="text" class="form-control"placeholder="email" name="user[email]">

	<input type="password" class="form-control"placeholder="password" name="user[password]">

	<button type="submit" class="btn btn-default">Sign Up</button>

</form>

<% if @user && @user.errors.full_messages.each do|error| %>
	<p><%= error %></p>
	<% end %>
<% end %>